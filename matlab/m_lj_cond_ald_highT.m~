clear

ipt=1
VIRTUAL_MASS = 1.1;
freq_cutoff = 0;
dph_scaling = 0.5;
vg_scaling = 0.75;
constant = m_constant; lj = m_lj;
%vcnmd
str.nmd = '/home/jason/disorder2/lj/alloy/40K/0.15/4x/NMD/';
vcnmd(ipt).nmd = load([str.nmd 'nmd.mat']);
%vcald
str.alloy = '/home/jason/disorder2/lj/alloy/40K/0.15/4x/NMD/';
alloy(ipt).alloy = load([str.alloy 'ALLOY.mat']);
str.ald = '/home/jason/disorder2/lj/ald/m1.1/40K/4x/Data_fullBZ.xls';
vcald(ipt).ald = m_joe_read_data([str.ald]);
vcald(ipt).sedald = m_joe_ald2nmd( vcnmd(ipt).nmd , vcald(ipt).ald );

ald(ipt).cond =...
    m_ald_cond(...
    1./(1./vcald(ipt).sedald.life)*vcnmd(ipt).nmd.lj.tau,...
    vcald(ipt).sedald.vel(:,1)*vcnmd(ipt).nmd.lj.sigma/vcnmd(ipt).nmd.lj.tau,...
    vcnmd(ipt).nmd.x0.VOLUME*vcnmd(ipt).nmd.lj.sigma^3);

vcald(ipt).cond =...
    m_ald_cond(...
    1./(1./alloy(ipt).alloy.life +...
    1./vcald(ipt).sedald.life)*vcnmd(ipt).nmd.lj.tau,...
    vcald(ipt).sedald.vel(:,1)*vcnmd(ipt).nmd.lj.sigma/vcnmd(ipt).nmd.lj.tau,...
    vcnmd(ipt).nmd.x0.VOLUME*vcnmd(ipt).nmd.lj.sigma^3);

ald(ipt).cond

vcald(ipt).cond

loglog(...
    vcald(ipt).sedald.freq,...
    1./(1./alloy(ipt).alloy.life + 1./vcald(ipt).sedald.life).*...
    vcald(ipt).sedald.vel(:,1),'.'...
    )
